---
// main layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Button from "@components/Button.astro";
---

<BaseLayout title="Store" description="Store." noindex={true}>
	<section class="site-container pt-36 text-center md:pt-44">
		<div class="mx-auto max-w-xl px-4 text-center">
			<h1 class="h1">Coming Soon!</h1>
			<p class="description mt-4">
				Apologies, no products right now. Please coming again later.
			</p>
			<div class="mt-8 flex justify-center">
				<Button variant="primary" href="/">Go to homepage</Button>
			</div>
		</div>
	</section>
</BaseLayout>
