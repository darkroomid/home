---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

import { Image } from "astro:assets";

// components
import Button from "@components/Button.astro";

// images
import heroImage from "@images/plane.jpg";
import heroImageMobile from "@images/plane.jpg";
---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full overflow-hidden">
		<div class="absolute inset-0 bg-black/10"></div>

		<Image
			src={heroImage}
			class="hidden h-auto min-h-full w-full object-cover object-bottom sm:block"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			height={1400}
		/>
		<Image
			src={heroImageMobile}
			class="h-auto min-h-full w-full object-cover sm:hidden"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			width={1200}
		/>
	</div>

	<!-- hero items -->
	<div class="site-container relative w-full gap-10 py-44 text-center md:py-52 md:text-left">
		<!-- Hero text -->
		<div class="text-base-50 my-auto mr-auto max-w-[800px] flex-col">
			<h1
				class="font-heading-1 text-4xl text-black font-semibold text-pretty drop-shadow-[0_4px_4px_rgba(0,0,0,0.5)] md:text-7xl md:leading-tight"
			>
				Dark Side of the Room
			</h1>
			<p
				class="mt-8 text-lg tracking-widest text-white italic drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:max-w-[550px] md:text-2xl"
			>
                I trust pictures not words.
            </p>
            <div class="mt-10 flex flex-wrap justify-center gap-4 md:justify-start">
				<Button
					variant="ghost"
					arrow="right"
					href="/collections"
					class="pl-0 text-xl text-black drop-shadow-[0_1px_1px_rgba(0,0,0,0.2)] md:text-2xl"
				>
					Collections
				</Button>
			</div>
		</div>
	</div>
</section>
