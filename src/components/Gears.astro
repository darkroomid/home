---
/**
 * * Gears section
 */

import profileImage from "@assets/images/me.png";
import { Image } from "astro:assets";
---

<section id="gears" class="site-container scroll-mt-10 py-8 md:py-12">
	<div class="flex flex-col md:flex-row">
		<div class="md:w-2/3">
			<h2 class="h3 text-primary-500 text-pretty uppercase">My Gears</h2>
			<!-- <h3 class="h2 mt-4">Jenna Marie</h3> -->
            <div class="bg-base-100 mt-8 p-8 md:mb-20 lg:text-lg">

				<div class="flex w-3/4">
                    <p class="font-heading-1 text-2xl">Analog Camera</p>
                </div>
                <p> - Pentax KM </p>
                <p> - SMC Pentax-M 40mm f2.8 Pancake </p>

            <br>

                <div class="flex w-3/4">
                    <p class="font-heading-1 text-2xl">Digital Camera</p>
                </div>
                <p> - Lumix GX85 </p>
                <p> - G Vario f1:3.5-5.6/12-32mm </p>

            <br>

                <div class="flex w-3/4">
                    <p class="font-heading-1 text-2xl">Others</p>
                </div>
                <p> - SCM Pentax M 50mm f1.4 </p>
                <p> - Super Takumar Multicoated 50mm f1.4 </p>

			</div>
		</div>
		<div class="mr-auto max-w-md md:w-1/3 md:max-w-none">
			<div class="my-auto aspect-[3/4] w-full overflow-hidden">
				<Image
					src={profileImage}
					alt="Andrea Ross"
					width={4500}
					densities={[1.5, 2]}
					class="h-auto min-h-full w-full min-w-full object-cover"
				/>
			</div>
		</div>
	</div>
</section>

