{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
	"strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
        "@config/*": ["src/config/*"],
        "@js/*": ["src/js/*"],
        "@layouts/*": ["src/layouts/*"],
        "@data/*": ["src/data/*"],
        "@components/*": ["src/components/*"],
        "@assets/*": ["src/assets/*"],
        "@images/*": ["src/assets/images/*"],
        "@videos/*": ["src/assets/videos/*"],
        "@styles/*": ["src/styles/*"],
        "@/*": ["src/*"]
        }
    }
}
